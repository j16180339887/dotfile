#!/bin/bash

[ "`whoami`" = root ] || exec sudo "$0" "$@"

if echo "$@" | grep -q "upgrade\|install\|dist-upgrade\|full-upgrade"; then
  cd /var/cache/apt/archives/;

  DNS="--async-dns-server=8.8.8.8,180.76.76.76"
  if ! ping -c 1 8.8.8.8 | grep -q -i "ttl"; then
    DNS=""
  fi

  # Donload unfinished jobs
  aria2c -c --max-tries=0 --max-concurrent-downloads=16 --max-connection-per-server=16 --split=16 --min-split-size=1M $DNS -i apt-fast.list

  # Create new jobs
  apt-get -y --print-uris $@ | egrep -o -e "(ht|f)tp[s]?://[^\']+" > apt-fast.list && aria2c -c --max-tries=0 --max-concurrent-downloads=16 --max-connection-per-server=16 --split=16 --min-split-size=1M --async-dns-server=8.8.8.8,180.76.76.76 -i apt-fast.list
fi

apt $@ && rm /var/cache/apt/archives/apt-fast.list
